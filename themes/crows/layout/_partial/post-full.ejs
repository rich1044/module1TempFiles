<div class="cPost">
    <h2 class="cPostTitle">
        <a href="<%- config.root %><%- item.path %>">
            <%- item.title || item.link%>
        </a>
    </h2>
    <p class="cPostMeta">
        <%= item.date.format(config.date_format) %>
        <% if(item.author) { %>
            by <%- item.author %>
        <% } %>
    </p>
    <%- item.content %>
    <hr />
</div>
